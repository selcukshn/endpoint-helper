@page "/"

<PageTitle>Index</PageTitle>
<EHView BaseAddress="https://localhost:1234" Header="Blog">
    <EHBody>
        <EHGet Endpoint="/api/blog/{url:string}" Parameters="parameters" RequestName="GetBlogWithUrl"
            IsSuccess="typeof(List<Blog>)" />
        <EHPost Endpoint="/api/blog" RequestName="CreateBlog" Body="typeof(CreateBlog)" IsSuccess="typeof(bool)" />
        <EHPut Endpoint="/api/blog/{id:guid}" RequestName="UpdateBlog" Body="typeof(UpdateBlog)"
            IsSuccess="typeof(bool)" />
        <EHDelete Endpoint="/api/blog/{id:guid}" RequestName="DeleteBlog" Body="typeof(DeleteBlog)"
            IsSuccess="typeof(bool)" />
    </EHBody>
</EHView>


@code {
    List<EHParameter> parameters = new List<EHParameter>(){
new EHParameter("count",typeof(int),true),
new EHParameter("search",typeof(string)),
};
}
